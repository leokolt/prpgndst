{{#if @custom.top_post}}

    <section class="top-post">

    {{#get "posts" filter="tags:hash-top" limit="1"}}

        {{#foreach posts}}

        <article class="post-feed__item {{post_class}}">

                {{#if feature_image}}
                <a class="post-feed__item-link" href="{{url}}">
                    <img class="post-feed__item-image"
                        srcset="{{img_url feature_image size="s"}} 300w,
                                {{img_url feature_image size="m"}} 600w,
                                {{img_url feature_image size="l"}} 1000w,
                                {{img_url feature_image size="xl"}} 2000w"
                        sizes="(max-width: 2000px) 400px, 700px"
                        src="{{img_url feature_image size="xl"}}"
                        alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
                        loading="lazy"
                    />
                </a>
                {{/if}}

                <div class="post-feed__item-inner wrapper">
                    <div class="post-feed__item-content">
                        <a class="post-feed__item-link" href="{{url}}">
                            <h2 class="post-feed__item-title">{{title}}</h2>
                        </a>

                        <p>{{excerpt}}</p>

                        <div class="post-feed__item-meta">
                            <span class="post-feed__item-date">
                                <time datetime="{{date updated_at format="YYYY-MM-DD"}}">{{date updated_at format="DD MMMM YYYY"}}</time>
                            </span>
                        </div>
                    </div>
                </div>
        </article>

        {{/foreach}}

    {{/get}}

    </section>

{{/if}}
