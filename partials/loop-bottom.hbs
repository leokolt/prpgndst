<article class="post-feed__item {{post_class}}{{#has number="5,9,15"}} huge-post{{/has}}{{#has number="12,14,18"}} with-excerpt{{/has}}">

        {{^has number="12,14,19"}}
            {{#if feature_image}}
            <a class="post-feed__item-imagewrap" href="{{url}}">
                <img class="post-feed__item-image"
                    srcset="{{img_url feature_image size="s"}} 300w,
                            {{img_url feature_image size="m"}} 600w,
                            {{img_url feature_image size="l"}} 1000w,
                            {{img_url feature_image size="xl"}} 2000w"
                    sizes="(max-width: 1000px) 400px, 700px"
                    src="{{img_url feature_image size="m"}}"
                    alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
                    loading="lazy"
                />
            </a>
            {{/if}}
        {{/has}}

        <div class="post-feed__item-content">
                {{#if primary_tag}}
                <span class="post-feed__item-tag">{{primary_tag.name}}</span>
                {{/if}}
            <a class="post-feed__item-link" href="{{url}}">
                <h2 class="post-feed__item-title">{{title}}</h2>
            </a>

            {{#has number="5,9,12,14,15,18"}}
                <p>{{excerpt}}</p>
            {{/has}}

            <div class="post-feed__item-meta">
                {{#primary_author}}
                    <a class="post-feed__item-author post-author__link" href="{{url}}">
                        {{name}}
                    </a> â˜…
                {{/primary_author}}
                <span class="post-feed__item-date">
                    <time datetime="{{date format="YYYY-MM-DD"}}">{{date format="DD MMMM YYYY"}}</time>
                </span>
            </div>
        </div>
</article>
